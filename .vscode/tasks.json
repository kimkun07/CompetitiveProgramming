{
  "tasks": [
    {
      "label": "build",
      "type": "cppbuild",
      "command": "C:/Program Files/mingw64/bin/g++.exe",
      "args": [
        "-x",
        "c++",
        "-g",
        // "-O2", VSCode breakpoint not working correctly with -O2 option
        "-std=gnu++20",
        "-static",
        "-fdiagnostics-color=always",
        "${file}",
        "-o",
        "${fileDirname}\\exe\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "C:/Program Files/mingw64/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
